---
import TopBar from '../components/top_bar.astro';
import SideBar from '../components/side_bar.astro';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="The most based web todo app.">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-stone-600 h-screen flex flex-col">
		<TopBar />
		<slot />
	</body>
</html>
